@model LoginModel
@{
	ViewData["Login"] = "Login";
}
<h1>@ViewData["Login"]</h1>

<div>
	<form asp-controller="Account" asp-action="Login" method="post">
		<div class="form-group">
			@Html.LabelFor(model => model.UserName, new { @class = "sr-only", @for = "Email" })
			@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName:" , @id="UserName" })
			@Html.ValidationMessageFor(model => model.UserName)
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Password, new { @class = "sr-only", @for = "Password" })
			@Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" , @id="Password" })
			@Html.ValidationMessageFor(model => model.Password)
		</div>

		<br />
		<div>
			<button type="submit" class="btn btn-primary">Login</button>
			<input type="submit" name="register" value="Register" class="btn btn-success" formaction="@Url.Action("Register", new {})" formmethod="post" />
			<a href="/Account/Logout" class="btn btn-danger">Logout</a>
		</div>

	</form>
</div>
<br />
