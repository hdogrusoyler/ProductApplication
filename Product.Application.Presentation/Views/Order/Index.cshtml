@using Product.Application.Entity
@model List<Order>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">OrderNumber</th>
			<th scope="col">Date</th>
			<th scope="col">OrderProducts</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in @Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.OrderNumber</td>
				<td>@item.Date</td>
				<td>
					<ul>
						@foreach (var prod in @item.OrderProducts)
						{
							<li>@prod.OrderProductQuantity adet sipariş verildi | @prod.Product.ProductCode | @prod.Product.ProductName | @prod.Product.ProductQuantity adet kalan ürün</li>
						}
					</ul>

				</td>
			</tr>
		}
	</tbody>
</table>