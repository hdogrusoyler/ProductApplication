@using Product.Application.Entity
@model List<Product>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">ProductCode</th>
			<th scope="col">ProductName</th>
			<th scope="col">Description</th>
			<th scope="col">Price</th>
			<th scope="col">ProductQuantity</th>
			<th scope="col">OrderProducts</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in @Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.ProductCode</td>
				<td>@item.ProductName</td>
				<td>@item.Description</td>
				<td>@item.Price</td>
				<td>@item.ProductQuantity</td>
				<td>
					<ul>
						@foreach (var prod in @item.OrderProducts)
						{
							<li>@prod.OrderProductQuantity adet sipariş verildi | @prod.Order.OrderNumber | @prod.Order.Date</li>
						}
					</ul>

				</td>
			</tr>
		}
	</tbody>
</table>